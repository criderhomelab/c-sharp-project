@page
@model myWebApp.Pages.Things.IndexModel
@{
    ViewData["Title"] = "Things";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>@ViewData["Title"]</h1>
            
            <div class="mb-3">
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create New Thing
                </a>
            </div>

            @if (Model.Things.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Things[0].Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Things[0].Purpose)</th>
                                <th>@Html.DisplayNameFor(model => model.Things[0].CreatedOn)</th>
                                <th>@Html.DisplayNameFor(model => model.Things[0].LastModified)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Things)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Purpose)</td>
                                    <td>@Html.DisplayFor(modelItem => item.CreatedOn)</td>
                                    <td>@Html.DisplayFor(modelItem => item.LastModified)</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <h4>No Things Found</h4>
                    <p>There are no things in the database yet. <a asp-page="Create">Create one now</a>.</p>
                </div>
            }
        </div>
    </div>
</div>
